---
import '@fontsource-variable/inter';
import '@fontsource-variable/lora';
import '@fontsource/roboto';
import '@fontsource-variable/lexend';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Roboto';
    --aw-font-serif: 'Lora Variable';
    --aw-font-heading: 'Lexend Variable';

    --aw-color-primary: #043792;
    --aw-color-secondary: #064BC5;
    --aw-color-accent: #6E06DF;
    --aw-color-green: #018424;
    --aw-color-yellow: #D6BE08;
    --aw-color-red: #C52314;

    --aw-color-primary-50: #0f64f879;
    --aw-color-secondary-50: #064cc577;
    --aw-color-accent-50: #6f06df79;
    --aw-color-green-50: #01842481;
    --aw-color-yellow-50: #d6be0883;
    --aw-color-red-50: #c5231488;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: #080808;

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Roboto';
    --aw-font-serif: 'Lora Variable';
    --aw-font-heading: 'Lexend Variable';

    --aw-color-primary: #064BC5;
    --aw-color-secondary: #0F63F8;
    --aw-color-accent: #9E47FE;
    --aw-color-green: #019027;
    --aw-color-yellow: #D6BE08;
    --aw-color-red: #F41905;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: #080808;

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
