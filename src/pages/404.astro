---
import Layout from '~/layouts/PageLayout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `404 - Page Not Found | Alex's Blog`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h1 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-primary">404</span>
        </h1>
        <p class="text-3xl font-semibold md:text-3xl mb-2">Oops!</p>
        <p class="mb-8 text-lg text-muted dark:text-slate-400">
          Looks like this page doesn't exist or it was moved. You can try <a href="/search" class="text-primary underline cursor-pointer hover:text-secondary">searching again</a> or return to the <a href="/" class="text-primary underline cursor-pointer hover:text-secondary">homepage</a>.
        </p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn-primary ml-4 rounded-sm">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>